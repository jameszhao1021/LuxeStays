@model VillaNumber

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Delete Villa Number</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4 border">
        <form asp-route-villaNumberId="@Model.Villa_Number"  method="post" class="row">
             <input asp-for="Villa_Number" hidden/> 
            <div class="p-3">
                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div div="form-floating py-1 col-12">
                    <label asp-for="VillaId" class="ms-2 py-2 pb-1"></label>
                    <input asp-for="VillaId" class="form-control border shadow" />
                    <span asp-validation-for="VillaId" class="text-danger"></span>
                </div>
                <div div="form-floating py-1 col-12">
                    <label asp-for="Villa_Number" class="ms-2 pb-1"></label>
                    <input asp-for="Villa_Number" class="form-control border shadow"/>           
                    <span asp-validation-for="Villa_Number" class="text-danger"></span>
                </div>

                <div div="form-floating py-1 col-12">
                    <label asp-for="SpecialDetials" class="ms-2 py-2 pb-1"></label>
                    <input asp-for="SpecialDetials" class="form-control border shadow" />
                    <span asp-validation-for="SpecialDetials" class="text-danger"></span>
                </div>
            </div>

                <div class="col-6 col-md-3 offset-md-6">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-check-circle"></i> Delete
                    </button>
                   </div>

                <div class="col-6 col-md-3">
                   <a asp-controller="VillaNumber" asp-action="Delete" class="btn btn-secondary w-100"> 
                        <i class="bi bi-x-circle"></i> Cancel 
                    </a> 

                </div> 

        </form>
    </div>
</div>

